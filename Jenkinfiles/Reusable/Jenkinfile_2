pipeline {
    agent any

    environment {
        VERSION = '1.1.0'
        RELEASE_VERSION = 'R.2'
    }
    stages {

        stage('Audit tools') {
            steps {
                sh '''
                    git version
                    java -version
                    mvn -version
                '''
            }
        }
        stage('Unit Test') {
            steps {
                dir('./java-tomcat-sample') {
                    sh '''
                        echo "Executing Unit Tests..."
                        mvn test
                    '''
                }
            }
        }
        stage('Build') {
            steps {
                echo "Buiding version ${VERSION} with suffix: ${RELEASE_VERSION}"
                echo 'Mention your Application Build Code Here !!!'
                dir('./java-tomcat-sample'){
                    sh '''
			mvn versions:set -DnewVersion="${VERSION}"-SNAPSHOT -Dplugin.version=2.15.0
                        mvn versions:update-child-modules
                        mvn clean package
                    '''
                }
            }
        }
   }
}
