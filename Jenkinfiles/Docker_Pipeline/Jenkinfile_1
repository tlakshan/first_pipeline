pipeline {
    agent {
        docker {
            image 'maven:latest'
            args '-u root'
        }
    }
    environment {
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
    }
    stages {
        stage('Audit Tools') {
            sh '''
                java -version
                mvn -version
            '''    
            sh 'printenv'
            sh 'ls -l $WORKSPACE'
        }
        stage('Unit Test') {
            steps {
                dir('./java-tomcat-sample') {
                    sh '''
                        echo "Executing Unit Tests..."
                        mvn test
                    '''
                }
            }
        }
        stage('Build') {
            steps {
                echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
                echo "Mention your Apllication Build Code Here !!!"
                sh 'mvn -f java-tomcat-sample/pom.xml clean package'
            }
        }
    }
}
